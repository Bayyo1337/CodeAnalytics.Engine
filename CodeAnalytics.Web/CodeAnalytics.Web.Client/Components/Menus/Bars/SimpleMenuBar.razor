@using CodeAnalytics.Web.Client.Components.Common.Symbols
@using CodeAnalytics.Web.Client.Menus
@using CodeAnalytics.Web.Client.Models.Search

@inject MenuService MenuService

<div class="bar">
   <div class="left">
      <div class="title">
         <div class="detail">
            <Icon Name="search" />
         </div>
         <div class="text">
            Search Menu
         </div>
      </div>
   </div>
   <div class="spacer"></div>
   <div class="right">
      <div class="close link" @onclick="@OnCloseClick">
         <Icon Name="close" />
      </div>
   </div>
</div>

@code {

   [Parameter]
   public ulong MenuId { get; set; }
   
   private void OnCloseClick()
   {
      MenuService.SetResult<SearchResult>(MenuId, null);
   }
   
}